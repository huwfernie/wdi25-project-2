users/:id

<p>
  user: <%= locals.thisUser %><br>
</p>
username: <%= locals.thisUser.username %><br>
email: <%= locals.thisUser.email %><br>
password: <%= locals.thisUser.password %><br>
profile image: <%= locals.thisUser.imageProfile %><br>
hero image: <%= locals.thisUser.imageHero %><br>
nearestAirport: <%= locals.thisUser.nearestAirport %><br>
favourites: <%= locals.thisUser.favourites %><br>
bio: <%= locals.thisUser.bio %>

<hr>
<div class="outline">
  <img src="<%= locals.thisUser.imageProfile %>">
  <img src="<%= locals.thisUser.imageHero %>">
  <p>
    <p>
      username:<br>
    <%= thisUser.username %>
    </p>
    bio:<br>
    <%= thisUser.bio %>
  </p>

  <hr>

  <div class="outline">
    my trips:
    <ul>
      <% trips.forEach((trip) => { %>
        <li class="none">
          <div class="outline">
            title: <%= trip.title %><br>
            <a href="/trips/<%= trip.id %>">details</a>
          </div>
        </li>
      <% }); %>
    </ul>
  </div>

</div>

<hr>



  <% if(locals.isAuthenticated && (user.id == thisUser.id)) { %>
    <a href="/users/<%= locals.user.id %>/edit"><button>Edit your profile</button></a>

    <a href="/trips/new"><button>Add a new trip report</button></a>
  <% } %>
