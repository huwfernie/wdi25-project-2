trips - edit

<p>
  value="<%= trip %>"
</p>
<form method="POST" action="/trips/<%= trip.id %>">
  <input type="hidden" name="_method" value="PUT">
    <div>
      <label for="title">Title?</label>
      <input type="text" name="title" id="title" value="<%= trip.title %>">
    </div>
    <div>
      <label for="when">When?</label>
      <input type="text" name="when" id="when" value="<%= trip.when %>">
    </div>
    <div>
      <label for="where">Where?</label>
      <input type="text" name="where" id="where" value="<%= trip.where %>">
    </div>
    <div>
      <label for="who.adults">Who - Adults?</label>
      <input type="number" name="who[adults]" id="who.adults" value="<%= trip.who.adults %>">
    </div>
    <div>
      <label for="who.children">Who - Children?</label>
      <input type="number" name="who[children]" id="who.children" value="<%= trip.who.children %>">
    </div>
    <div>
      <label for="how">how?</label>
      <input type="text" name="how" id="how" value="<%= trip.how %>">
    </div>
    <div>
      <label for="for">for how long?</label>
      <input type="number" name="for" id="for" value="<%= trip.for %>">
      days
    </div>
    <div>
      <label for="lat">lat?</label>
      <input type="number" name="lat" id="lat" value="<%= trip.lat %>">
      e.g. : 51.515113
    </div>
    <div>
      <label for="long">long?</label>
      <input type="number" name="long" id="long" value="<%= trip.long %>">
      e.g. : -0.072051
    </div>
    <div>
      <label for="words">Write your Travel diary here:</label>
      <input type="text" name="words" id="words" value="<%= trip.words %>">
    </div>
  <p>
    <button>Update</button>
  </p>
</form>
