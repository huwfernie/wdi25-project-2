<div class="container-fluid tripEdit">
  <div class="row">
    <div class="col-12 clearHeader"></div>
  </div>

  <div class="row">
    <div class="col-12 banner"></div>
  </div>

  <div class="row">
    <div class="col-md-1"></div>

    <div class="col-md-10">
      <div class="outline">
        Write your trip account here:
        <div class="container">

          <form method="POST" action="/trips" id="new">
            <div>
              <label for="title">Title?</label>
              <input type="text" name="title" id="title">
            </div>
            <div>
              <label for="when">When?</label>
              <input type="text" name="when" id="when" placeholder="summer or winter">
            </div>
            <div>
              <label for="where">Where?</label>
              <input type="text" name="where" id="where">
            </div>
            <div>
              <label for="who.adults">Who - Adults?</label>
              <input type="number" name="who[adults]" id="who.adults">
            </div>
            <div>
              <label for="who.children">Who - Children?</label>
              <input type="number" name="who[children]" id="who.children">
            </div>
            <div>
              <label for="how">how?</label>
              <input type="text" name="how" id="how">
            </div>
            <div>
              <label for="for">for how long?</label>
              <input type="number" name="for" id="for" placeholder="days">
            </div>
            <div>
              <label for="lat">lat?</label>
              <input type="number" name="lat" id="lat" placeholder="e.g. : 51.515113 (negative for south)">
            </div>
            <div>
              <label for="long">long?</label>
              <input type="number" name="long" id="long" placeholder="e.g. : -0.072051 (negative for west)">
            </div>

            <div>
              <label for="words">Write your Travel diary here:</label>
              <%# Don't change the spacing on the line below! between textarea and itself %>
              <textarea rows="4" cols="50" form="new" name="words" placeholder="A long time ago, in a gallaxy far far away..."></textarea>
            </div>
            <button>Publish</button>
          </form>

        </div>
      </div>
    </div>
  <div class="col-md-1"></div>
  </div>
</div>
